{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "outDir": ".build",
  "compilerOptions": {
    "builder": {
      "type": "swc",
      "options": {
        "swcrcPath": ".swcrc",
        "copyFiles": true
      },
      "plugins": [
        "@nestjs/graphql"
      ]
    },
    "tsConfigPath": "tsconfig.json"
  }
}